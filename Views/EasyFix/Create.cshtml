@model FaultCode
@{
    ViewData["Title"] = "Create Code";
}

<div>
    <h3>@ViewData["Title"]</h3>

    <div id="faultCode-form-holder" class="well">
        <form id="faultCode-form" asp-action="Create"> 
            
            <div class="form-group">
                <label asp-for="Brand">Brand:</label>
                <input type="text" asp-for="Brand" class="form-control">
            </div>
            
            <div class="form-group">
                <label asp-for="Code">Code:</label>
                <input type="text" asp-for="Code" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <input type="text" asp-for="Description" class="form-control">
            </div>
            <button type="submit" id="form-submit" class="btn btn-success">Add Code</button>
        </form>
    </div>

</div>